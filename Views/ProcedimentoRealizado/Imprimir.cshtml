@model ProjetoFinalAna.Models.ProcedimentoRealizado

@{
    Layout = null;
}
<link rel="stylesheet" href="~/css/Laudo.css" asp-append-version="true" />

<div>
    <dl class="row">
        <head>
            <meta charset="UTF-8">
            <meta name="viewport" content="width=device-width, initial-scale=1.0">
            <link rel="stylesheet" href="assets/style.css">
            <title>Clínica Gouvêa</title>
        </head>

        <body>
            <main>
                <header>
                    <h1><img src="/css/img/micro.png"/>ClinicGov</h1>
                </header>
                <div class="info">
                    <div class="info1">
                        <div>
                            <span class="nomeBold">CLIENTE: </span>
                            <span>@Html.DisplayFor(model => model.Cliente.ClienteNome)</span>
                        </div>
                        <div>
                            <span class="nomeBold">SEXO: </span>
                            <span>@Html.DisplayFor(model => model.Cliente.ClienteSexo)</span>
                        </div>
                        <div>
                            <span class="nomeBold">CPF: </span>
                            <span>@Html.DisplayFor(model => model.Cliente.ClienteCpf)</span>
                        </div>
                    </div>

                    <div class="info2">
                        <div>
                            <span class="nomeBold">COLABORADOR: </span>
                            <span>@Html.DisplayFor(model => model.Colaborador.ColaboradorNome)</span>
                        </div>
                        <div>
                            <span class="nomeBold">LOCAL: </span>
                            <span>@Html.DisplayFor(model => model.LocalRealizacao.LocalNome)</span>
                        </div>
                    </div>
                </div>

                <div class="infoExame">
                    <div>
                        <div>
                            <span class="nomeBold">@Html.DisplayFor(model => model.Procedimento.ProcedimentoNome)</span>
                        </div>
                    </div>
                    <div>
                        <div>
                            <span class="nomeBold">DATA E HORA DA COLETA: </span>
                            <div><span>@Html.DisplayFor(model => model.DataRealizacao)</span></div>
                        </div>
                    </div>
                </div>
                <hr>
                <div class="resul">
                    <div>
                        <span class="nomeBold">RESULTADO: </span>
                        <span class="nomeCor">@Html.DisplayFor(model => model.ObservacaoRealizacao)</span>
                    </div>
                </div>
                <div class="referencias">
                    <div>
                        <span class="nomeBold">VALORES DE REFERÊNCIA:</span>
                        <span> Mulher: 0,6 - 1,2 mg/dL</span>
                    </div>
                    <div>
                        <span>Homem: 0,7 - 1,3 mg/dL</span>
                    </div>
                </div>
                <hr>

                <div class="metodo">
                    <div>
                        <span class="nomeBold">METODOLOGIA: </span>
                        <span>Jaffé Automatizado</span>
                    </div>
                </div>

            </main>


        </body>
    </dl>
</div>